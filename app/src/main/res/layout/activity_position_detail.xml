<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_position_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyp.myruidao.ui.activity.PositionDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/posi_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:titleTextColor="#FFF">

    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/posi_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/posi_detail_tab"
        android:layout_below="@+id/posi_detail_toolbar">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/posi_detail_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabTextColor="#99FFFFFF"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabBackground="@color/colorPrimary">

    </android.support.design.widget.TabLayout>

</RelativeLayout>
